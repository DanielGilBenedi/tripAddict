{% extends 'base.html.twig' %}

{% block title %}LineaPedido index{% endblock %}

{% block body %}
    <h1>LineaPedido index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Precio</th>
                <th>Fecha_fin</th>
                <th>Usado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for linea_pedido in linea_pedidos %}
            <tr>
                <td>{{ linea_pedido.id }}</td>
                <td>{{ linea_pedido.precio }}</td>
                <td>{{ linea_pedido.fechaFin ? linea_pedido.fechaFin|date('Y-m-d') : '' }}</td>
                <td>{{ linea_pedido.usado ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('linea_pedido_show', {'id': linea_pedido.id}) }}">show</a>
                    <a href="{{ path('linea_pedido_edit', {'id': linea_pedido.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('linea_pedido_new') }}">Create new</a>
{% endblock %}
