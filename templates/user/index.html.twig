{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container text-center">
  <h1 >Usuario</h1>
</div>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Ciudad</th>
                <th>FechaNacimiento</th>
                <th>FechaRegistro</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody "table table-striped">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.usuario }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.apellidos }}</td>
                <td>{{ user.direccion }}</td>
                <td>{{ user.ciudad }}</td>
                <td>{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ user.fechaRegistro ? user.fechaRegistro|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-block mb-2 mt-2" href="{{ path('user_new') }}">Crear Nuevo</a>
{% endblock %}
