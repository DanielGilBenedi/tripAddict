
{% block stylesheets %}
    <style>
        .panel-transparent{
            background-color:rgba(100,100,100,0.5);
        }
    </style>
{% endblock %}

{% block body %}

<div class="mb-3 mt-3" style="background-image:url('/images/cielo.jpg')">
    <div  class=''>
        <div class="card-body panel-transparent">
            <div class='container'>
                <form class="form-inline justify-content-center row" action='/buscar'method='POST'>
                    <div class="form-group col-md-3">
                        <select class="form-control w-100" id="grupo" name='grupo'>
                            <option value="0"> Cualquier Pack </option>
                            {% for grupo in grupos %}
                                <option value="{{grupo.id}}"> {{grupo.titulo}} </option>
                            {% endfor %}
                        </select >
                    </div>

                    <div class="form-group col-md-3">
                        <select class="form-control w-100" id="precio" name='precio'>
                            <option value="1000"> Cualquier Precio </option>
                           
                            <option value="50">Menos de 50€ </option>
                            <option value="100">Menos de 100€ </option>
                            <option value="150"> Menos de 150€ </option>
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <button type="submit" class="btn btn-info btn-block"> Encuentra tu Viaje </button>
                    </div>
                </form>
            </div>
        </div>   
    </div>
</div>   
{% endblock %}

