{% extends 'base.html.twig' %}

{% block title %}Hello FinCompraController!{% endblock %}

    {% block stylesheets %}
        <style>
           
        </style>
    {% endblock %}

{% block body %}

    <div  class="container"> 

        <ul class="list-group mt-5 mb-5">


            <div class="list-group-item d-flex justify-content-between lh-condensed">
                <div class="col-md-3 mt-3 mb-3">
                    <h4 class="mb-3 text-center"> Resumen de su compra: </h4>
                </div>

                        <!-- [Contenedor de descripción del producto] -->
                <div>
                    <h6 class="col-md-2 mt-3 mb-3 text-center"> Producto: </h6>
                    <small class="col-md-2 text-muted text-center"> Descripción </small>
                </div>

                        <!-- [Contenedor de cantidad y precio] -->
                <div class="product-cart">
                            <!-- [Cantidad] -->
                    <div>
                        <h6 class="col-md-2 mt-3 mb-3 text-center"> Cantidad: </h6>
                        <input name="cantidad" value="1" class="input-text qty" type="hidden">
                    </div>
                            <!-- [Precio total] -->
                    <div class="text-muted text-center" value="1"> 19,90 € </div>
                </div>
            </div>



            <div class="list-group-item">
                <div class="col-md-12 mt-3 mb-3 form-group row border border-success">
                    <label for="staticEmail" class="col-sm-12 col-form-label"> Nombre: </label>
                    <div> <p type="text" readonly class="form-control-plaintext" id="staticName"> Alejandro Daniel </p> </div>
                </div>

                <div class="col-md-12 form-group row border border-success">
                    <label for="staticEmail" class="col-sm-12 col-form-label"> Email: </label>
                    <p type="text" readonly class="form-control-plaintext" id="staticName"> ponaquituemail@ejemplo.com </p>
                </div>
            </div>
        </ul>
    </div>


    <div>
        <div class="col-md-12 mb-5 mt-5">
                <h4 class="mb-3 text-center"> Gracias. </h4>
        </div>
        
        <div class="col-md-12 mb-5 mt-5">
                <h4 class="mb-3 text-center"> Su compra ha sido procesada. En unos momentos recibirá un correo electrónico. </h4>
        </div>
    </div>

{% endblock %}
