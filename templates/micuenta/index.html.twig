{% extends 'base.html.twig' %}

{% block title %}Hello MiCuentaController!{% endblock %}

{% block body %}

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Mi Cuenta</h1>
  </div>
</section>
<div class='card'>
<div class='card-body'>
<form>


<div class="form-group row">

    <label for="exampleInputEmail1" class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Nombre</label>
    <div class="col-sm-10">
          {{ form_widget(form.nombre, {'attr':{"placeholder": "Introduce nombre"}} ) }}
    </div>
  </div>    

  <div class="form-group  row">
    <label for="exampleInputEmail1" class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Apellidos</label>
    <div class="col-sm-10">
    {{ form_widget(form.apellidos, {'attr':{"placeholder": "Introduce apellidos"}} ) }}
    </div>
  </div>  

  <div class="form-group row">
    <label for="exampleInputEmail1"  class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Email</label>
    <div class="col-sm-10">
      {{ form_widget(form.email, {'attr':{"placeholder": "Introduce email"}} ) }}
    </div>
  </div>  

  <div class="form-group row">
    <label for="exampleInputEmail1"  class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Contraseña</label>
    <div class="col-sm-10">
        {{ form_widget(form.password, {'attr':{"placeholder": "Introduce contraseña"}} ) }}
    </div>
  </div>       

<div class="form-group row">
    <label for="exampleInputEmail1"  class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Direccion</label>
    <div class="col-sm-10">
         {{ form_widget(form.direccion, {'attr':{"placeholder": "Introduce direccion"}} ) }}
    </div>
  </div>  

  <div class="form-group row">
    <label for="exampleInputEmail1"  class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Ciudad</label>
    <div class="col-sm-10">
        {{ form_widget(form.ciudad, {'attr':{"placeholder": "Introduce ciudad"}} ) }}
    </div>
  </div>  

  <div class="form-group row">
    <label for="exampleInputEmail1"  class="col-sm-2 col-form-label text-right bg-secondary text-white text-center">Fecha Nacimiento  </label>
    <div class="col-sm-10">
        {{ form_widget(form.fechaNacimiento) }}
    </div>
  </div>  

   <section class=" text-center">
 <a href="/finCompra" class='btn btn-primary btn-lg  '>Editar datos</a>
 
</section>
</form>
</div>
</div>

{% endblock %}
