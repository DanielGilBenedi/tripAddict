{% extends 'base.html.twig' %}

{% block title %}TripAddict | Paquete{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
  <div class="card col-8 align-items-start mb-3 p-2">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="\images\ImagenesPortadas\{{paquete.imagenPortada}}" class="card-img cuadradoGrande" id="destino"
          alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title">{{paquete.nombre}}</h3>
          <h5 class="card-title">Grupo: {{grupo.titulo}}</h5>
          <p class="card-text">{{paquete.descripcion}}</p>

        </div>
      </div>

      <img src="\images\ImagenesPortadas\{{paquete.imagenPortada}}" class="float-left cuadrado m-2" alt="..."
        style="width:50px" id="imagen1" onclick='copiar(this)'>

      <img src="https://www.wonderbox.es/media/resized_images/cache/240x390/720x1032B0C301.png"
        class="float-left cuadrado m-2" alt="..." style="width:50px" id="imagen1" onclick='copiar(this)'>
    </div>
  </div>


  {% if paquete.estanciaPacks|length > 0 %}
  <div class="card col-3   align-items-stretch align-self-start ">
    <div class="card-body text-right">

      <p class="validity">
        Validez: 30 Noviembre 2011 </p>
      <label for="quantity">Cantidad</label>
      <select id="quantity" name="qty" tittle="Cantidad">

        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>

      <h2> {{paquete.precio}}€</h3>
        <p class="text-center">
          <strong> <i class="fa fa-envelope-o" aria-hidden="true"></i> e-cofre enviado por e-mail</strong>
          Inmediatamente
          <button type="button" class="mt-3 btn btn-block btn-primary">Comprar</button></p>
    </div>
  </div>
  {% endif %}
</div>

<div class="card">
  <h2 class="card-header">Estancias</h2>
  <div class="card-body">
    <div class='row'>
      {% for estanciaPack in paquete.estanciaPacks %}
      <div class='col-md-5'>
        <div class="card">
          <a href="/detalleHotel/{{estanciaPack.idEstancia.idHotel.id}}/{{estanciaPack.idEstancia.id}}"
            style="text-decoration:none;">
            <img src="/images/Hoteles/{{estanciaPack.idEstancia.idHotel.imagenPortada}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{estanciaPack.idEstancia.idHotel.nombre}}</h5>
              <ul class="card-text">
                <li>Habitación: {{estanciaPack.idEstancia.habitacion}}</li>
                <li>Número de noches: {{estanciaPack.idEstancia.noches}}</li>
                <li>Pensión: {{estanciaPack.idEstancia.tipoPension}}</li>
              </ul>
            </div>
          </a>
        </div>
      </div>
      {% else %}
      Este pack todavía no tiene estancias añadidas.

      {% endfor %}
    </div>
  </div>
</div>
</div>




<style>
  .cuadrado {
    width: 100px;
    height: 100px;
  }
</style>
<script> function copiar(obj) { var i = document.getElementById('destino'); i.setAttribute('src', obj.getAttribute('src')); } </script>




{% endblock %}

